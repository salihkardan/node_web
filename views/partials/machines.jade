.container
	.panel.panel-default
		.panel-title Machines
		.panel-body
			.container.col-sm-4
				table.table
					tr
						th Hostname
						th IP
					tr(ng-repeat="m in machines", ng-click="selectRow(m)")
						td {{ m.hostname }}
						td {{ m.ip }}
			.container.col-sm-4(ng-show="selected")
				table.table
					tr
						th Book Name
					tr.animation(ng-repeat="b in books")
						td {{ b.name }}
				button.form-control.btn-success(ng-click="clear()") Clear 
			.container.col-sm-4
				table.table
					tr
						th Book Name
						th Selected
					tr.animation(ng-repeat="b in books")
						td {{ b.name }}
						td 
							pretty-checkbox.clearfix(value="true", ng-model='myModel.myRadio')
				p Values: {{myModel.myRadio}}
				button.form-control.btn-success(ng-click="add()") Clear 
