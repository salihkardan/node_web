.container(style="margin-top:50px")
    .row
        .col-sm-6.col-sm-offset-3
            .panel.panel-default
                .panel-title {{ 'LOGIN' }}
                .panel-body
                    form.form
                        .form-group
                            label(for="email") {{ 'EMAIL' }}
                            input.form-control(type="text",name="email",placeholder="john@gmail.com",id="email",ng-model="form.email")
                        .form-group
                            label(for="password") {{ 'PASSWORD'}}
                            input.form-control(type="password",name="password",placeholder="mypassword",id="password",ng-model="form.password")
                        .alert.alert-danger(ng-if="error") You could not be logged in, please try again.
                        button.btn.btn-primary(ng-click="login()")
                            i.fa.fa-sign-in
                            span  Sign In

                        span &nbsp;

                        a.btn.btn-success(href="#/signup")
                            i.fa.fa-pencil
                            span  Sign Up